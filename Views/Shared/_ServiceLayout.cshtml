<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Cổng Dịch Vụ Bệnh Viện Tam Bình</title>

    <link rel="shortcut icon" href="~/asset/logo_03.png" type="image/x-icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="~/Content/css/patient_dashboard.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
</head>

<body style="font-family: Montserrat;">
    <header class="portal-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("PatientDashboard", "ServicePortal")" class="portal-logo">
                    <img src="~/asset/logo_02.png" alt="Logo Bệnh viện" />
                </a>

                <div class="portal-auth-links">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="nav-item dropdown auth-link-profile-dropdown"
                             style="display: block !important; visibility: visible !important; opacity: 1 !important;">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-user-shield me-2"></i>
                                Chào, @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Profile")">
                                        Hồ sơ chi tiết
                                    </a>
                                </li>
                                @*<li><hr class="dropdown-divider" /></li>*@
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                        <i class="fa-solid fa-right-from-bracket me-2"></i>Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="login">
                            <a href="@Url.Action("Login", "Account", new { returnUrl = Context.Request.Url.PathAndQuery })"
                               class="auth-link-login">
                                <i class="fa-regular fa-user me-2"></i>Đăng nhập
                            </a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </header>

    <main class="portal-main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- ============================= COPYRIGHT ======================================== -->
    <footer class="copyright bg-black text-white text-center p-3">
        <p class="mb-0">
            Copyright ©2025 - Bản quyền thuộc về BỆNH VIỆN ĐA KHOA TAM BÌNH -
            Phát triển bởi
            <a href="#" class="text-white">GunnNguyen</a>
        </p>
    </footer>

    <!-- ============================= SCRIPT ======================================== -->
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // === XỬ LÝ BẢO VỆ LINK (Client-side protection) ===
            function handleProtectedLinkClick(event) {
                const isLoggedIn = localStorage.getItem("isLoggedIn") === "true"
            }

            // Tìm các link cần bảo vệ (Dựa vào class hoặc href cụ thể)
            // Lưu ý: Bạn nên thêm class="protected-link" vào các thẻ a cần bảo vệ ở View con cho dễ quản lý
            const protectedLinks = document.querySelectorAll('.protected-link');
            protectedLinks.forEach(link => {
                link.addEventListener('click', handleProtectedLinkClick);
            });
        });
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>