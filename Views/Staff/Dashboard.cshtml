@{
    ViewBag.Title = "Bàn làm việc Bác sĩ";
    Layout = "~/Views/Shared/_HealthLayout.cshtml";

    ViewBag.HideHeaderFooter = true;
    ViewBag.HideFooter = true;
}

@section Styles{
    <style>
        main.container {
            max-width: 100% !important;
            width: 100% !important;
            margin: 0 !important;
            min-height: calc(100vh - 45px) !important;
            background-color:aliceblue;
        }

        .alert-info {
            background-color: rgba(255, 255, 255, 0.95) !important;
            border: none !important;
            border-radius: 1rem !important;
            color: #444 !important;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2) !important;
            backdrop-filter: blur(5px);
        }

            .alert-info hr {
                border-top-color: #ddd !important;
            }

        .btn-lg {
            border-radius: 1rem !important;
            padding-left: 30px !important;
            padding-right: 30px !important;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .text-warning {
            margin-bottom: 2rem !important;
        }

        h1.text-secondary {
            color: var(--main) !important;
            font-weight: 600 !important;
        }
    </style>
}

<main class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 60vh;">

    <div class="mb-4 text-warning">
        <i class="fa-solid fa-person-digging" style="font-size: 5rem;"></i>
    </div>

    <h1 class="fw-bold text-secondary mb-3">Xin chào, Bác sĩ @Session["Username"]</h1>

    <div class="alert alert-info shadow-sm p-4 text-center" style="max-width: 100rem;">
        <h3 class="alert-heading fw-bold">
            <i class="fa-solid fa-flask me-2"></i>Tính năng đang phát triển
        </h3>
        <hr>
        <p class="mb-0 fs-5 text-center" style="font-size: 2rem !important">
            Hệ thống PACS và Bàn làm việc dành cho Bác sĩ đang trong quá trình xây dựng và nâng cấp.
            Vui lòng quay lại sau hoặc liên hệ bộ phận IT nếu cần hỗ trợ gấp.
        </p>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-lg" style="font-size: 2rem !important">
            <i class="fa-solid fa-house me-2"></i>Trang chủ
        </a>

        <a href="@Url.Action("StaffLogin", "Staff")" class="btn btn-danger btn-lg ms-2" style="font-size: 2rem !important">
            <i class="fa-solid fa-right-from-bracket me-2"></i> Đăng xuất
        </a>
    </div>

</main>