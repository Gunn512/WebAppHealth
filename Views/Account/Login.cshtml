@model WebAppHealth.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/css/login-register.css" />
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="auth-container">
            @using (Html.BeginForm("Login", "Account", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "auth-form needs-validation", novalidate = "true" }))
            {
                @Html.AntiForgeryToken()

                <h2 class="auth-title text-center mb-4">ĐĂNG NHẬP</h2>

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.UserName, "Email hoặc Số điện thoại", new { @class = "form-label" })

                    @Html.TextBoxFor(m => m.UserName, new
                    {
                        @class = "form-control",
                        placeholder = "Nhập Email hoặc SĐT đã đăng ký",
                        required = "required"
                    })

                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    <div class="invalid-feedback">
                        Vui lòng nhập tên đăng nhập.
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, "Mật khẩu", new { @class = "form-label" })

                    <div class="password-field-container position-relative">
                        @Html.PasswordFor(m => m.Password, new
                        {
                            @class = "form-control",
                            placeholder = "Mật khẩu",
                            required = "required"
                        })

                        <span class="toggle-password position-absolute top-50 end-0 translate-middle-y me-3"
                              style="cursor: pointer; z-index: 10;">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>

                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        <label class="form-check-label" for="RememberMe">Ghi nhớ đăng nhập?</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-success auth-button w-100">
                    Đăng nhập
                </button>

                <div class="auth-links mt-3 text-center d-flex justify-content-between">
                    <a href="@Url.Action("Register", "Account")">Chưa có tài khoản? Đăng ký</a>
                    <a href="#">Quên mật khẩu?</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. BOOTSTRAP VALIDATION
            var forms = document.querySelectorAll(".needs-validation");
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener("submit", function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add("was-validated");
                }, false);
            });

            // 2. XỬ LÝ ẨN/HIỆN MẬT KHẨU
            var toggleButtons = document.querySelectorAll(".toggle-password");
            toggleButtons.forEach(function (button) {
                button.addEventListener("click", function () {
                    // Tìm input password ngay phía trước nút icon
                    var input = this.previousElementSibling;
                    // Nếu dùng Html.ValidationMessageFor chèn vào giữa thì cấu trúc DOM có thể đổi
                    // Nên tìm chính xác bằng class form-control trong cùng container cha
                    if (!input || !input.classList.contains('form-control')) {
                        input = this.parentElement.querySelector('input.form-control');
                    }

                    var icon = this.querySelector("i");

                    if (input.type === "password") {
                        input.type = "text";
                        icon.classList.remove("fa-eye-slash");
                        icon.classList.add("fa-eye");
                    } else {
                        input.type = "password";
                        icon.classList.remove("fa-eye");
                        icon.classList.add("fa-eye-slash");
                    }
                });
            });
        });
    </script>
}