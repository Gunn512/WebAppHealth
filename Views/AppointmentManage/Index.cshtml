@{
    ViewBag.Title = "Tra Cứu Lịch Hẹn";
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@section Styles {
    <link href="~/Content/css/reg_standard_exam.css" rel="stylesheet" />
    <link href="~/Content/css/lookup_appointment.css" rel="stylesheet" />
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <header class="form-header">
            <h1>TRA CỨU LỊCH HẸN</h1>
        </header>

        <form id="lookup-form" class="lookup-form-container" novalidate>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="sdt">Số điện thoại <span class="required-asterisk">*</span></label>
                        <input type="tel" id="sdt" name="Phone" placeholder="Nhập số điện thoại đã đăng ký" />
                        <span class="error-message" id="sdt-error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="cccd">Số CCCD <span class="required-asterisk">*</span></label>
                        <input type="text" id="cccd" name="CCCD" placeholder="Nhập 12 số CCCD" maxlength="12" />
                        <span class="error-message" id="cccd-error"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="ngay-sinh">Ngày sinh <span class="required-asterisk">*</span></label>
                        <input type="date" id="ngay-sinh" name="DOB" />
                        <span class="error-message" id="ngay-sinh-error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="captcha">Mã bảo mật <span class="required-asterisk">*</span></label>
                        <div class="captcha-group">
                            <input type="text" id="captcha" placeholder="Nhập mã bên cạnh" />
                            <div class="captcha-code-container">
                                <span id="captcha-code" class="captcha-text"></span>
                                <i class="fas fa-sync-alt" id="refresh-captcha" title="Lấy mã mới" style="cursor: pointer;"></i>
                            </div>
                        </div>
                        <span class="error-message" id="captcha-error"></span>
                    </div>
                </div>
            </div>

            <div id="general-error" class="error-message text-center mb-3" style="display: none;"></div>

            <button type="submit" id="lookup-button" class="submit-btn">
                Xem lịch
            </button>
        </form>
    </div>
</div>

<div class="row result-section" id="result-container" style="display: none;">
    <div class="col-lg-5 mb-4">
        <h5 class="text-secondary fw-bold mb-3 border-bottom pb-2">Danh sách lịch hẹn</h5>
        <div id="appointment-list-content">
        </div>
    </div>

    <div class="col-lg-7">
        <h5 class="text-secondary fw-bold mb-3 border-bottom pb-2">Chi tiết phiếu khám</h5>
        <div id="appointment-detail-content">
            <div class="alert alert-light text-center border">
                <i class="fas fa-hand-point-left me-2"></i>Vui lòng chọn lịch hẹn để xem chi tiết
            </div>
        </div>
    </div>
</div>

<div class="loading-overlay" style="display: none;">
    <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            // === 1. LOGIC CAPTCHA (Giữ nguyên từ code mẫu) ===
            let currentCaptcha = "";
            const captchaTextEl = document.getElementById("captcha-code");

            function generateAndShowCaptcha() {
                const chars = "ABCDEFGHJKLMNPQRSTUVWXYZabcdefghkmnpqrstuvwxyz123456789";
                let newCaptcha = "";
                for (let i = 0; i < 4; i++) {
                    newCaptcha += chars.charAt(Math.floor(Math.random() * chars.length));
                }
                currentCaptcha = newCaptcha;
                captchaTextEl.textContent = currentCaptcha;
                $("#captcha-error").removeClass("show");
            }

            // Khởi tạo Captcha
            generateAndShowCaptcha();
            $("#refresh-captcha").click(generateAndShowCaptcha);


            // === 2. VALIDATE FORM ===
            function validateForm() {
                let isValid = true;

                // Reset errors
                $(".error-message").removeClass("show");

                // SDT
                if ($("#sdt").val().trim() === "") {
                    $("#sdt-error").text("Vui lòng nhập Số điện thoại.").addClass("show");
                    isValid = false;
                }
                // CCCD
                if ($("#cccd").val().trim() === "") {
                    $("#cccd-error").text("Vui lòng nhập Số CCCD.").addClass("show");
                    isValid = false;
                }
                // Ngày sinh
                if ($("#ngay-sinh").val() === "") {
                    $("#ngay-sinh-error").text("Vui lòng chọn Ngày sinh.").addClass("show");
                    isValid = false;
                }
                // Captcha
                const captchaInput = $("#captcha").val().trim();
                if (captchaInput === "") {
                    $("#captcha-error").text("Vui lòng nhập mã bảo mật.").addClass("show");
                    isValid = false;
                } else if (captchaInput.toLowerCase() !== currentCaptcha.toLowerCase()) {
                    $("#captcha-error").text("Mã bảo mật không đúng.").addClass("show");
                    generateAndShowCaptcha(); // Đổi mã mới để tránh spam
                    isValid = false;
                }

                return isValid;
            }


            // === 3. GỬI AJAX TRA CỨU ===
            $("#lookup-form").on("submit", function (e) {
                e.preventDefault();
                $("#general-error").removeClass("show");

                if (validateForm()) {
                    $(".loading-overlay").css("display", "flex");

                    // Thu thập dữ liệu theo đúng tên trong ViewModel (LookupRequestVM)
                    var formData = {
                        Phone: $("#sdt").val(),
                        CCCD: $("#cccd").val(),
                        DOB: $("#ngay-sinh").val()
                    };

                    $.ajax({
                        url: '@Url.Action("Lookup", "AppointmentManage")',
                        //url: '/AppointmentManage/Lookup',
                        type: 'POST',
                        data: formData,
                        success: function (res) {
                            $(".loading-overlay").hide();

                            if (res.success === false) {
                                // Trường hợp lỗi từ Server trả về (ví dụ không tìm thấy)
                                $("#general-error").text(res.message).addClass("show");
                                $("#result-container").hide();
                                generateAndShowCaptcha();
                            } else {
                                window.location.href = res.redirectUrl;
                                //// Thành công: Hiển thị container kết quả
                                //$("#result-container").fadeIn();
                                //$("#appointment-list-content").html(res); // Load danh sách vào cột trái

                                //// Reset cột phải
                                //$("#appointment-detail-content").html('<div class="alert alert-light text-center border">Vui lòng chọn lịch hẹn để xem chi tiết</div>');

                                //// Scroll xuống kết quả
                                //$('html, body').animate({
                                //    scrollTop: $("#result-container").offset().top - 20
                                //}, 500);
                            }
                        },
                        error: function (xhr) {
                            $(".loading-overlay").hide();
                            $("#general-error").text("Lỗi kết nối server (" + xhr.status + "). Vui lòng thử lại.").addClass("show");
                        }
                    });
                }
            });


            // === 4. XỬ LÝ CLICK XEM CHI TIẾT ===
            $(document).on("click", ".appointment-item", function () {
                var id = $(this).data("id");

                // Active style
                $(".appointment-item").removeClass("border-primary bg-light");
                $(this).addClass("border-primary bg-light");

                $(".loading-overlay").css("display", "flex");

                $.get("/AppointmentManage/GetDetail/" + id, function (htmlRes) {
                    $(".loading-overlay").hide();
                    $("#appointment-detail-content").html(htmlRes);

                    // Render Barcode (Nếu thẻ SVG tồn tại)
                    var code = $("#barcodePlaceholder").data("code");
                    if (code) {
                        try {
                            JsBarcode("#barcodePlaceholder", code, {
                                format: "CODE128", height: 60, displayValue: true, margin: 10
                            });
                        } catch (e) { console.error("Barcode Error", e); }
                    }
                });
            });

            // === 5. XỬ LÝ HỦY LỊCH (Copy logic cũ) ===
            $(document).on("click", ".btn-cancel", function (e) {
                e.stopPropagation();
                if (!confirm("Bạn có chắc chắn muốn hủy lịch hẹn này?")) return;
                var id = $(this).data("id");

                $(".loading-overlay").css("display", "flex");
                $.post("/AppointmentManage/CancelAppointment", { id: id }, function (res) {
                    $(".loading-overlay").hide();
                    alert(res.message);
                    if (res.success) {
                        $("#lookup-form").trigger("submit"); // Reload danh sách
                    }
                });
            });

            // === 6. XỬ LÝ ĐỔI LỊCH ===
            $(document).on("click", ".btn-reschedule", function (e) {
                e.stopPropagation();
                var id = $(this).data("id");
                window.location.href = "/ServicePortal/RegisterStandardExam?rescheduleId=" + id;
            });
        });
    </script>
}