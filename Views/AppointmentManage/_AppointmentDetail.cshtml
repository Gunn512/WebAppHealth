@model WebAppHealth.Models.AppointmentDetailVM

<div class="card shadow border-primary">
    <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0 fw-bold">PHIẾU HẸN KHÁM BỆNH</h5>
        <small>BỆNH VIỆN ĐA KHOA TAM BÌNH</small>
    </div>
    <div class="card-body p-4">
        <div class="text-center mb-4">
            <svg id="barcodePlaceholder" data-code="@Model.BarcodeData"></svg>
        </div>

        <div class="row mb-2 border-bottom pb-2">
            <div class="col-4 text-muted">Mã BN:</div>
            <div class="col-8 fw-bold">@Model.MaBN</div>
        </div>
        <div class="row mb-2 border-bottom pb-2">
            <div class="col-4 text-muted">Mã hồ sơ:</div>
            <div class="col-8 fw-bold text-danger">@Model.MaKCB</div>
        </div>
        <div class="row mb-2 border-bottom pb-2">
            <div class="col-4 text-muted">Họ tên:</div>
            <div class="col-8 fw-bold text-uppercase text-primary">@Model.HoTen</div>
        </div>
        <div class="row mb-2 border-bottom pb-2">
            <div class="col-4 text-muted">Ngày sinh:</div>
            <div class="col-8">@Model.NgaySinh</div>
        </div>
        <div class="row mb-2 border-bottom pb-2">
            <div class="col-4 text-muted">Đối tượng:</div>
            <div class="col-8">@Model.DoiTuong</div>
        </div>

        <div class="bg-light p-3 rounded mt-3">
            <div class="row mb-2">
                <div class="col-4 text-muted">Ngày khám:</div>
                <div class="col-8 fw-bold text-success">@Model.NgayKham</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 text-muted">Giờ khám:</div>
                <div class="col-8 fw-bold">@Model.GioKham</div>
            </div>
            <div class="row mb-2">
                <div class="col-4 text-muted">Chuyên khoa:</div>
                <div class="col-8">@Model.ChuyenKhoa</div>
            </div>
            <div class="row mb-0">
                <div class="col-4 text-muted">Bác sĩ:</div>
                <div class="col-8 fw-bold">@Model.BacSi</div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.TrieuChung))
        {
            <div class="mt-3">
                <p class="text-muted mb-1">Lý do khám/Triệu chứng:</p>
                <p class="fst-italic">"@Model.TrieuChung"</p>
            </div>
        }
    </div>
    <div class="card-footer text-center bg-white">
        <small class="text-muted"><i class="fas fa-info-circle me-1"></i>Vui lòng đến trước giờ hẹn 15 phút để làm thủ tục tiếp đón.</small>
    </div>
</div>