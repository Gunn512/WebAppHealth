@using WebAppHealth.Models
@model List<PatientGuideModel>

@{
    ViewBag.Title = "Hướng dẫn - Quy trình";
    Layout = "~/Views/Shared/_HealthLayout.cshtml";

    // Breadcrumb
    var breadcrumbs = new List<BreadcrumbItem>
{
        new BreadcrumbItem { Title = "Dịch vụ", Url = "#" },
        new BreadcrumbItem { Title = "Hướng dẫn", Url = "" }
    };
}

@section Styles {
    <link rel="stylesheet" href="~/Content/css/intro.css" />
    <link rel="stylesheet" href="~/Content/css/patient-guide.css" />
}

<section class="banner-title">
    <div class="container">
        @Html.Partial("_SectionTitle", "HƯỚNG DẪN")
    </div>
</section>

<main class="page-container">
    <div class="container">
        @Html.Partial("_Breadcrumb", breadcrumbs)

        <div class="mt-4">

            <section class="content-section hours-section" data-aos="fade-up" data-aos-duration="1000">
                <h2>Giờ Khám Bệnh</h2>
                <div class="row">
                    <div class="col-lg-6 hours-column">
                        <h3>Khám trong giờ</h3>
                        <div class="title">Khoa khám bệnh (Thứ 2 - thứ 6):</div>
                        <div class="content">
                            <strong>Sáng:</strong> 7h - 12h<br />
                            <strong>Chiều:</strong> 13h - 16h
                        </div>
                    </div>

                    <div class="col-lg-6 hours-column">
                        <h3>Khám ngoài giờ</h3>
                        <div class="title">Khu vực khoa Khám bệnh (Thứ 7):</div>
                        <div class="content">
                            <strong>Sáng:</strong> 7h - 12h<br />
                            <strong>Chiều:</strong> 13h - 16h
                        </div>

                        <div class="title">Khu vực cấp cứu (Phòng khám yêu cầu):</div>
                        <div class="content">
                            Thứ 2 - Thứ 7: <br /><strong>Chiều:</strong> 16h - 19h30<br />
                            Chủ nhật: <br /><strong>Sáng:</strong> 7h - 11h30
                        </div>
                    </div>
                </div>
            </section>

            <section class="content-section hours-section" data-aos="fade-up" data-aos-duration="1000">
                <h2>Giờ Thăm Bệnh</h2>
                <div class="row">
                    <div class="col-lg-6 hours-column">
                        <div class="content">
                            <strong>Sáng:</strong> 10h - 12h<br />
                        </div>
                    </div>
                    <div class="col-lg-6 hours-column">
                        <div class="content"><strong>Chiều:</strong> 15h - 21h</div>
                    </div>
                </div>
            </section>

            <section class="content-section process-section" data-aos="fade-up" data-aos-duration="1000">
                <h2>Quy trình khám bệnh</h2>

                <div class="process-buttons">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var step in Model)
                        {
                            var activeClass = step.IsActive ? "active" : "";
                            var fullImgPath = Url.Content("~/asset/" + step.ImageName);

                            <button class="tab-button @activeClass"
                                    data-target="@step.Id"
                                    data-img-src="@fullImgPath">
                                @step.Title
                            </button>
                        }
                    }
                </div>

                <div class="process-content">
                    <img id="process-image"
                         src=""
                         alt="Quy trình khám bệnh"
                         class="img-fluid" />
                </div>
            </section>

            <section class="content-section caicach-section" data-aos="fade-up" data-aos-duration="1000">
                <h2>Cải cách thủ tục</h2>
                <div class="img">
                    <img src="~/asset/medical-background.jpg" class="img-fluid" alt="CẢI CÁCH THỦ TỤC" />
                </div>
            </section>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const buttons = document.querySelectorAll(".process-buttons .tab-button");
            const processImage = document.getElementById("process-image");
            const activeBtn = document.querySelector(".process-buttons .tab-button.active");

            if (activeBtn && processImage) {
                processImage.src = activeBtn.getAttribute("data-img-src");
            }

            buttons.forEach(function (button) {
                button.addEventListener("click", function () {
                    const newImagePath = button.getAttribute("data-img-src");

                    if (processImage && newImagePath) {
                        processImage.style.opacity = 0;

                        setTimeout(() => {
                            processImage.src = newImagePath;
                            processImage.alt = button.textContent.trim();
                            processImage.style.opacity = 1;
                        }, 200);
                    }

                    buttons.forEach(btn => btn.classList.remove("active"));
                    button.classList.add("active");
                });
            });
        });
    </script>
}