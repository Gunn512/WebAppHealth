@model IEnumerable<WebAppHealth.Areas.Admin.Models.AppointmentViewModel>

@{
    ViewBag.Title = "Quản lý Lịch hẹn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Lịch khám bệnh</h6>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Index", "Appointments", FormMethod.Get, new { @class = "row g-3 mb-4" }))
        {
            <div class="col-md-3">
                <label class="form-label">Chọn ngày khám</label>
                <input type="date" name="date" class="form-control" value="@ViewBag.CurrentDate">
            </div>
            <div class="col-md-3">
                <label class="form-label">Bác sĩ</label>
                @Html.DropDownList("doctorId", (SelectList)ViewBag.Doctors, "--- Tất cả bác sĩ ---", new { @class = "form-select" })
            </div>
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select name="status" class="form-select">
                    <option value="">--- Tất cả ---</option>
                    <option value="Pending" @(ViewBag.CurrentStatus == "Pending" ? "selected" : "")>Chờ duyệt</option>
                    <option value="Confirmed" @(ViewBag.CurrentStatus == "Confirmed" ? "selected" : "")>Đã duyệt</option>
                    <option value="Canceled" @(ViewBag.CurrentStatus == "Canceled" ? "selected" : "")>Đã hủy</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter"></i> Lọc dữ liệu</button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Mã BN</th>
                        <th>Thông tin Bệnh nhân</th>
                        <th>Bác sĩ / Khoa</th>
                        <th>Ngày & Giờ</th>
                        <th>Loại</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.PatientCode</strong></td>
                                <td>
                                    @item.PatientName <br />
                                    <small class="text-muted"><i class="fas fa-phone"></i> @item.Phone</small>
                                </td>
                                <td>
                                    <strong>BS. @item.DoctorName</strong><br />
                                    <small>@item.DepartmentName</small>
                                </td>
                                <td>
                                    @string.Format("{0:dd/MM/yyyy}", item.AppointmentDate)<br />
                                    <span class="badge bg-info text-dark">@item.TimeSlot</span>
                                </td>
                                <td>@item.Type</td>
                                <td>
                                    <span class="badge bg-@item.StatusClass">
                                        @(item.Status == "Pending" ? "Chờ duyệt" : (item.Status == "Confirmed" ? "Đã duyệt" : "Đã hủy"))
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (item.Status == "Pending")
                                    {
                                        <button class="btn btn-success btn-sm btn-action" data-id="@item.AppointmentID" data-action="Confirm" title="Duyệt">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button class="btn btn-danger btn-sm btn-action" data-id="@item.AppointmentID" data-action="Cancel" title="Hủy">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
                                    <a href="#" class="btn btn-primary btn-sm" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">Không tìm thấy dữ liệu nào phù hợp.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-action').click(function () {
                var btn = $(this);
                var id = btn.data('id');
                var action = btn.data('action'); // "Confirm" hoặc "Cancel"
                var url = '/Admin/Appointments/' + action;

                var confirmText = action === "Confirm" ? "Bạn muốn duyệt lịch hẹn này?" : "Bạn chắc chắn muốn hủy lịch hẹn này?";

                if (confirm(confirmText)) {
                    // Lấy token bảo mật
                    var form = $('#__AjaxAntiForgeryForm');
                    var token = $('input[name="__RequestVerificationToken"]', form).val();

                    $.ajax({
                        url: url,
                        type: 'POST',
                        data: {
                            id: id,
                            __RequestVerificationToken: token
                        },
                        success: function (res) {
                            if (res.success) {
                                alert(res.message);
                                location.reload(); // Tải lại trang để cập nhật trạng thái
                            } else {
                                alert(res.message);
                            }
                        },
                        error: function () {
                            alert("Đã xảy ra lỗi khi kết nối server.");
                        }
                    });
                }
            });
        });
    </script>
}