@model IEnumerable<WebAppHealth.Areas.Admin.Models.NewsViewModel>

@{
    ViewBag.Title = "Quản lý Tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Tin tức & Sự kiện</h6>
        <a href="@Url.Action("Create", "News")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Viết bài mới
        </a>
    </div>

    <div class="card-body">
        <form method="get" action="@Url.Action("Index")" class="row g-3 mb-4">
            <div class="col-auto">
                <input type="text" name="search" class="form-control" placeholder="Tìm tiêu đề..." value="@ViewBag.Search">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary"><i class="fas fa-search"></i> Tìm</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th width="50">Ảnh</th>
                        <th>Tiêu đề</th>
                        <th>Danh mục</th>
                        <th>Ngày đăng</th>
                        <th>Tác giả</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/Uploads/News/@item.Image" alt="Thumb" style="width: 50px; height: 50px; object-fit: cover;" class="rounded border">
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Title</div>
                                </td>
                                <td><span class="badge bg-secondary">@item.CategoryName</span></td>
                                <td>@item.PublishDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.Author</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-danger btn-delete" data-id="@item.NewsID">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Chưa có bài viết nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-delete').click(function () {
                var id = $(this).data('id');
                if (confirm("Bạn có chắc chắn muốn xóa bài viết này?")) {
                    var token = $('input[name="__RequestVerificationToken"]', $('#__AjaxAntiForgeryForm')).val();
                    $.ajax({
                        url: '/Admin/News/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function (res) {
                            if (res.success) {
                                alert(res.message);
                                location.reload();
                            } else {
                                alert(res.message);
                            }
                        }
                    });
                }
            });
        });
    </script>
}