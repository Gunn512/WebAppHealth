@model IEnumerable<WebAppHealth.Areas.Admin.Models.MedicineViewModel>

@{
    ViewBag.Title = "Kho thuốc & Vật tư";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh mục Thuốc</h6>
        <a href="@Url.Action("Create", "Medicines")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Thêm thuốc mới
        </a>
    </div>

    <div class="card-body">
        <form method="get" action="@Url.Action("Index")" class="row g-3 mb-4">
            <div class="col-md-5">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Tìm tên thuốc hoặc hoạt chất..." value="@ViewBag.Search">
                    <button class="btn btn-secondary" type="submit"><i class="fas fa-search"></i> Tìm</button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered align-middle table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th width="60">Ảnh</th>
                        <th>Tên thuốc / Hoạt chất</th>
                        <th>Đóng gói</th>
                        <th>Đơn vị</th>
                        <th>Giá bán</th>
                        <th>Nhà sản xuất</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/Uploads/Medicines/@item.Image" alt="Img" style="width: 50px; height: 50px; object-fit: contain;" class="border rounded bg-white">
                                </td>
                                <td>
                                    <div class="fw-bold text-primary">@item.Name</div>
                                    <small class="text-muted">HC: @item.ActiveIngredient</small>
                                </td>
                                <td><small>@item.Packaging</small></td>
                                <td>@item.Unit</td>
                                <td class="text-danger fw-bold text-end">
                                    @string.Format("{0:N0} đ", item.Price)
                                </td>
                                <td>@item.Manufacturer</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-danger btn-delete" data-id="@item.MedicineID">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">Không tìm thấy thuốc nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{@Html.AntiForgeryToken()}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-delete').click(function () {
                var id = $(this).data('id');
                if (confirm("Bạn có chắc chắn muốn xóa loại thuốc này?")) {
                    var token = $('input[name="__RequestVerificationToken"]', $('#__AjaxAntiForgeryForm')).val();
                    $.ajax({
                        url: '/Admin/Medicines/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function (res) {
                            if (res.success) {
                                alert(res.message);
                                location.reload();
                            } else { alert(res.message); }
                        }
                    });
                }
            });
        });
    </script>
}