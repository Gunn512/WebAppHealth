@model IEnumerable<WebAppHealth.Areas.Admin.Models.ScheduleViewModel>

@{
    ViewBag.Title = "Quản lý Lịch làm việc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Lịch trực Bác sĩ</h6>
        <a href="@Url.Action("Create", "Schedules")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Đăng ký lịch mới
        </a>
    </div>

    <div class="card-body">
        <form method="get" action="@Url.Action("Index")" class="row g-3 mb-4">
            <div class="col-md-3">
                <label class="form-label">Ngày làm việc</label>
                <input type="date" name="date" class="form-control" value="@ViewBag.CurrentDate">
            </div>
            <div class="col-md-3">
                <label class="form-label">Bác sĩ</label>
                @Html.DropDownList("doctorId", (SelectList)ViewBag.Doctors, "--- Tất cả ---", new { @class = "form-select" })
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Lọc</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Ngày</th>
                        <th>Bác sĩ</th>
                        <th>Khoa</th>
                        <th>Khung giờ</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DateWork.ToString("dd/MM/yyyy")</td>
                                <td class="fw-bold text-primary">@item.DoctorName</td>
                                <td>@item.DepartmentName</td>
                                <td><span class="badge bg-info text-dark">@item.TimeSlot</span></td>
                                <td>
                                    @if (item.Status == "Available")
                                    {
                                        <span class="badge bg-success">Sẵn sàng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã đầy/Khóa</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-danger btn-delete" data-id="@item.ScheduleID">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Chưa có lịch làm việc nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-delete').click(function () {
                var btn = $(this);
                var id = btn.data('id');
                if (confirm("Bạn có chắc chắn muốn xóa lịch làm việc này không?")) {
                    var token = $('input[name="__RequestVerificationToken"]', $('#__AjaxAntiForgeryForm')).val();
                    $.ajax({
                        url: '/Admin/Schedules/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: token },
                        success: function (res) {
                            if (res.success) {
                                alert(res.message);
                                location.reload();
                            } else {
                                alert(res.message);
                            }
                        }
                    });
                }
            });
        });
    </script>
}