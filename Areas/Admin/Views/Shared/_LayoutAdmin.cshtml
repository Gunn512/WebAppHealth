<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản trị hệ thống Bệnh viện Tam Bình</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/Areas/Admin/Content/LayoutAdmin.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark px-3">
        <a class="navbar-brand" href="/Admin/Dashboard">Tam Binh Hospital Admin</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Xin chào, @User.Identity.Name</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Views/Home/Index.cshtml">Đăng xuất</a>
                </li>
            </ul>
        </div>
    </nav>

    <main class="main-section">
        <div class="row">
            <div class="col-2">
                <nav id="sidebar" class="sidebar">
                    <ul class="nav flex-column components">
                        <li class="nav-item"><a href="/Admin/Dashboard" class="nav-link"><i class="fas fa-home me-2"></i> Dashboard</a></li>
                        <li class="nav-item"><a href="/Admin/Appointments" class="nav-link"><i class="fas fa-calendar-check me-2"></i> Quản lý Lịch hẹn</a></li>
                        <li class="nav-item"><a href="/Admin/Doctors" class="nav-link"><i class="fas fa-user-md me-2"></i> Bác sĩ</a></li>
                        <li class="nav-item"><a href="/Admin/Patients" class="nav-link"><i class="fas fa-users me-2"></i> Bệnh nhân</a></li>
                        <li class="nav-item"><a href="/Admin/Schedules" class="nav-link"><i class="fas fa-clock me-2"></i> Lịch làm việc</a></li>
                        <li class="nav-item"><a href="/Admin/News" class="nav-link"><i class="fas fa-newspaper me-2"></i> Tin tức</a></li>
                        <li class="nav-item"><a href="/Admin/Medicines" class="nav-link"><i class="fas fa-newspaper me-2"></i> Quản lý thuốc</a></li>
                    </ul>
                </nav>
            </div>


            <div class="col-10">
                <div id="content">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>

                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-light text-center p-3 mt-auto">
        <p class="mb-0">&copy; @DateTime.Now.Year - Bệnh viện Đa khoa Tam Bình - Phân hệ Admin</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>